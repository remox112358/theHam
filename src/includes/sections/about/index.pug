section.section.section--about
  .container
    h2.section__heading About our company
    .section__inner
      .row.justify-content-center.no-gutters
        .about
          ul.tabs.tabs--about(id="tabs-about")
            li.tab(id="tab-history", data-href="#history") Our history
            li.tab(id="tab-biography", data-href="#biography") Our biography
            li.tab.active(id="tab-skills", data-href="#skills") Our skills
          .about__content
            .area.area--history(id="history")
              each paragraph in history
                p= paragraph
              .row.row--advantages.justify-content-between.mt-4
                each i in Array(8)
                  .col-sm-6.col--advantage
                    .advantage
                      +icon('checked')
                      span.advantage__text Excepteur sint occaecat sint.
            .area.area--biography(id="biography")
              each paragraph in biography
                p= paragraph
            .area.area--skills.active(id="skills")
              each skill in skills
                .skill(id=skill.id)
                  .skill__bar
                  .skill__name= skill.name
