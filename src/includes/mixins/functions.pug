mixin assets(type, name)
  if (type === 'css')
    +style(`/assets/css/${name}${process.env.NODE_ENV === 'production' ? '.min' : ''}.css`)
  if (type === 'js')
    +script(`/assets/js/${name}${process.env.NODE_ENV === 'production' ? '.min' : ''}.js`)

mixin style(path, rel = "stylesheet", integrity = null, crossorigin = null)
  if (integrity && crossorigin)
    link( href=path,
          rel=rel,
          integiry=integrity,
          crossorigin=crossorigin)
  else
    link( href=path,
          rel=rel)

mixin script(path, type = "text/javascript")
  script( src=path
          type=type)

mixin icon(name)
  svg(class=`icon icon--${name}`)
    use(xlink:href=`#icon-${name}`)